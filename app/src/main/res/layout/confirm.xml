<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:wallpaper="http://schemas.android.com/apk/res/com.serrofortia.wallpaper"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
   >

   
    
    <EditText android:layout_width="match_parent"
    		 android:layout_height="wrap_content"
    		 android:background="@drawable/bg_input"
    		 android:inputType="number"
    		 android:paddingLeft="13dp"
    		 android:textSize="18sp"
    		 android:textColor="@color/black"
    		 android:textColorHint="@color/grey4"
    		 android:id="@+id/editCode"
    		 android:hint="@string/enterConfirmCode"
    		 android:gravity="center"
    		 
    		 
    		 />
    
  
    		 
       
   
    
    <com.serrofortia.wallpaper.ui.components.TextViewExtended   
	        
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/editCode"
	    	android:background="@drawable/bg_open_users_selector"
	    	android:id="@+id/btnConfirmCode"
	    	android:layout_marginTop="5dp"
    		android:text="@string/btnConfirmCode"
	    	android:textSize="23sp"
	    	wallpaper:typefaceCustom="hl"
	    	android:textColor="@color/white"
	    	android:gravity="center"
	    />
    
