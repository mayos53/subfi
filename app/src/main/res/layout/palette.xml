<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wallpaper="http://schemas.android.com/apk/res/com.serrofortia.wallpaper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_palette" >

    <FrameLayout
        android:id="@+id/palette_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" >

        <ImageView
            android:id="@+id/bg_palette_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_palette_edit" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/palette_edit" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/palette_undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/palette_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp" 
       >

        <ImageView
            android:id="@+id/bg_palette_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_palette_undo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/palette_undo" />
    </FrameLayout>

    <RelativeLayout
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/palette_undo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_paint" >

        <ImageView
            android:id="@+id/paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/paint_colors" />
    </RelativeLayout>

   
   
</RelativeLayout>