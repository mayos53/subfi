<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wallpaper="http://schemas.android.com/apk/res/com.serrofortia.wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_action_bar"
  	android:paddingRight="15dp"  
  	android:paddingLeft="15dp"  	
   >

    <ImageView
         android:layout_width="wrap_content"
    	 android:layout_height="wrap_content"
    	 android:id="@+id/menu"
    	 android:background="@drawable/btn_menu"
    	 android:layout_centerVertical="true" 
    	 	  		 
    />
    
    
     <com.serrofortia.wallpaper.ui.components.TextViewExtended
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/groups_title"
        android:id="@+id/groups_title"
        android:textColor="@color/white"
        android:textSize="24sp"
        wallpaper:typefaceCustom="hl"
                
     />
    
    <ImageView
         android:layout_width="wrap_content"
    	 android:layout_height="wrap_content"
    	 android:id="@+id/btnAddGroup"
    	 android:background="@drawable/bg_plus_selector"	
    	 android:layout_alignParentRight="true"
    	 android:layout_centerVertical="true"
    	 	 
    />
    
   
    	 
        
        
    		
   
   
    		 
   
    
   
    

</RelativeLayout>
