<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wallpaper="http://schemas.android.com/apk/res/com.serrofortia.wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_action_bar"
   >

    
    <ImageView
         android:layout_width="wrap_content"
    	 android:layout_height="wrap_content"
    	 android:id="@+id/group_back"
    	 android:background="@drawable/bg_group_back_selector"
    	 android:layout_centerVertical="true" 
    	 android:layout_marginLeft="15dp"  		 
    	 	  		 
    />
    
    
     
     <com.serrofortia.wallpaper.ui.components.TextViewExtended
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_centerInParent="true"
        android:text="@string/add_group_title"
        android:textColor="@color/white"
        android:textSize="24sp"
        wallpaper:typefaceCustom="hl"
                
     />
    
    
    
    
   
    	 
        
        
    		
   
   
    		 
   
    
   
    

</RelativeLayout>
