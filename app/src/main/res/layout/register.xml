    		 android:text="@string/enterName"
    		 android:layout_marginBottom="5dp"
    		 android:layout_marginRight="5dp"
    		 /> -->
    		 
   
    
    <CheckBox 
             android:layout_width="wrap_content"
    		 android:layout_height="wrap_content"
    		 android:id="@+id/checkConditions"
    		 android:background="@drawable/checkbox"
    		 android:layout_below="@id/editName"
    	     android:layout_marginTop="11dp"
    		 />
    
    
    <com.serrofortia.wallpaper.ui.components.TextViewExtended
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conditions_link"
        android:layout_toRightOf="@id/checkConditions"
        android:layout_marginLeft="6dp"
        android:layout_alignBaseline="@id/checkConditions"
        android:textColor="@color/grey5"
        android:textSize="12sp"
        wallpaper:typefaceCustom="hl"
        
                
     />
    
     
    
     
       
    
    
        
    

