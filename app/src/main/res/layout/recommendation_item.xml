 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wallpaper="http://schemas.android.com/apk/res/com.serrofortia.wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> 


<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="16dp"
    android:background="@drawable/group_item_bg_selector"
   >
 	
 	<com.android.volley.toolbox.NetworkImageView 
 	    android:layout_marginLeft="5dp"
 	    android:layout_marginTop="5dp"
 	    android:layout_width="45dp"
    	android:layout_height="45dp"
    	android:id="@+id/groupImage"
    	android:scaleType="centerCrop"
    	
   	    android:layout_centerVertical="true"
    	
    	
    	
    	/>
 	<ImageView 
 	    android:id="@+id/groupItemBg"
 	    
 	    
 	    android:layout_height="55dp"
 	    android:layout_width="55dp"
 	    android:layout_centerVertical="true"
 	    android:src="@drawable/group_item_bg_image_selector"
    />
    
    <com.serrofortia.wallpaper.ui.components.TextViewExtended   
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/groupImage"
    	android:layout_alignTop="@id/groupImage"
    	android:layout_marginLeft="17dp"
    	android:layout_marginTop="2dp"
    	android:textSize="18sp"
    	wallpaper:typefaceCustom="hb"
    	android:textColor="@drawable/group_item_name_selector"
    />
    
    <com.serrofortia.wallpaper.ui.components.TextViewExtended   
        android:id="@+id/text"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/groupImage"
    	android:layout_below="@id/groupName"
    	android:layout_marginLeft="17dp"
    	android:layout_marginTop="5dp"
    	android:textSize="15sp"
    	wallpaper:typefaceCustom="hr"
    	android:textColor="@drawable/group_item_name_selector"
    />
    
    

   
    
 

</RelativeLayout>

</FrameLayout>